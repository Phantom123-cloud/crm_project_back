model StockMovements {
  id                String               @id @default(uuid())
  product           Products             @relation(fields: [productId], references: [id])
  productId         String               @map("product_id")
  quantity          Int
  warehouseFrom     Warehouses?          @relation("WarehouseFrom", fields: [fromWarehouseId], references: [id])
  fromWarehouseId   String?              @map("from_warehouse_id")
  warehouseTo       Warehouses?          @relation("WarehouseTo", fields: [toWarehouseId], references: [id])
  toWarehouseId     String?              @map("to_warehouse_id")
  fromSupplier      FromSupplier?
  status            StockMovementsStatus
  stockMovementType StockMovementType
  createdAt         DateTime             @default(now()) @map("created_at")
  updatedAt         DateTime             @updatedAt @map("updated_at")

  @@map("stock_movements")
}

enum FromSupplier {
  SUPPLER
  SPV
  @@map("from_supplier")
}

enum StockMovementType {
  // ПРИХОД
  GOODS_RECEIPT
  // ПЕРЕМЕЩЕНИЕ
  STOCK_TRANSFER
  // ДОСТАВКА
  OUTBOUND_DELIVERY
  // СПИСАНИЕ_БРАК
  SCRAP

  @@map("stock_movement_type")
}

enum StockMovementsStatus {
  TRANSIT
  RECEIVED
  CANCELLED
  SCRAP

  @@map("stock_movement_status")
}

