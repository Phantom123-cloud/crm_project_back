model Trip {
  id          String     @id @default(uuid())
  name        String     @unique
  dateFrom    String
  dateTo      String
  isActive    Boolean    @default(true) @map("is_active")
  warehouses  Warehouses @relation(fields: [warehouseId], references: [id])
  warehouseId String     @map("warehouse_id")
  tripTypes   TripTypes  @relation(fields: [tripTypesId], references: [id])
  tripTypesId String     @map("trip_types_id")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@map("trips")
}

model TripTypes {
  id        String   @id @default(uuid())
  name      String   @unique
  trips     Trip[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("trip_types")
}

// СКЛАД
model Warehouses {
  id                 String           @id @default(uuid())
  name               String           @unique
  user               User             @relation(fields: [ownerUserId], references: [id])
  ownerUserId        String           @map("owner_user_id")
  isActive           Boolean          @default(true) @map("is_active")
  type               WarehousesTypes
  stockItems         StockItems[]
  stockMovementsFrom StockMovements[] @relation("WarehouseFrom")
  stockMovementsTo   StockMovements[] @relation("WarehouseTo")
  trips              Trip[]
  createdAt          DateTime         @default(now()) @map("created_at")
  updatedAt          DateTime         @updatedAt @map("updated_at")
  // warehousesHistries WarehousesHistry[]

  @@map("warehouses")
}

enum WarehousesTypes {
  CENTRAL
  PERSONAL
  TRIP
}

model Products {
  id             String           @id @default(uuid())
  name           String           @unique
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")
  stockItems     StockItems[]
  stockMovements StockMovements[]

  @@map("products")
}

model StockItems {
  id          String     @id @default(uuid())
  product     Products   @relation(fields: [productId], references: [id])
  productId   String     @map("product_id")
  warehouse   Warehouses @relation(fields: [warehouseId], references: [id])
  warehouseId String     @map("warehouse_id")
  quantity    Int
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  @@map("stock_items")
}

