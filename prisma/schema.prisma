generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// АККАУНТЫ
model User {
  id              String            @id @default(uuid())
  email           String            @unique
  password        String
  isActive        Boolean           @default(true) @map("is_active")
  isOnline        Boolean           @default(false) @map("is_online")
  lastConnections DateTime?         @default("2025-01-01T00:00:00.000Z") @map("last_connections")
  token           Token?
  employee        Employees?
  roleTemplate    RoleTemplates?    @relation(fields: [roleTemplatesId], references: [id], onDelete: SetNull)
  roleTemplatesId String?           @map("role_templates_id")
  individualRules IndividualRules[]
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")
  warehouses      Warehouses[]

  @@map("users")
}

model Token {
  id        String   @id @default(uuid())
  hash      String?  @map("hash")
  exp       BigInt   @default(0)
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @unique @map("user_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("tokens")
}

model Role {
  id              String            @id @default(uuid())
  name            String            @unique
  roleTypeId      String            @map("role_type_id")
  type            RoleTypes         @relation(fields: [roleTypeId], references: [id])
  descriptions    String            @default("")
  roleTemplates   RoleTemplates[]   @relation("role_connections")
  individualRules IndividualRules[]
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  @@map("roles")
}

model RoleTypes {
  id           String   @id @default(uuid())
  name         String   @unique
  descriptions String   @default("")
  roles        Role[]
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("role_types")
}

model RoleTemplates {
  id              String            @id @default(uuid())
  name            String            @unique
  roles           Role[]            @relation("role_connections")
  users           User[]
  individualRules IndividualRules[]
  createdAt       DateTime          @default(now()) @map("created_at")
  updatedAt       DateTime          @updatedAt @map("updated_at")

  @@map("role_templates")
}

model IndividualRules {
  id              String              @id @default(uuid())
  userId          String              @map("user_id")
  user            User                @relation(fields: [userId], references: [id])
  roleId          String              @map("role_id")
  role            Role                @relation(fields: [roleId], references: [id])
  type            IndividualRulesType
  template        RoleTemplates?      @relation(fields: [roleTemplatesId], references: [id])
  roleTemplatesId String?             @map("role_templates_id")
  createdAt       DateTime            @default(now()) @map("created_at")
  updatedAt       DateTime            @updatedAt @map("updated_at")

  @@map("individual_rules")
}

enum IndividualRulesType {
  ADD
  REMOVE

  @@map("individual_rules_type")
}

// АККАУНТЫ

// СОТРУДНИКИ
model Employees {
  id                  String             @id @default(uuid())
  fullName            String?            @map("full_name")
  actualAddress       String?            @map("actual_address")
  registrationAddress String?            @map("registration_address")
  passportNumber      String?            @map("passport_number")
  tradingСode        String?            @unique @map("trading_сode")
  citizenships        Citizenships[]     @relation("citizenship_of_employees")
  birthDate           String?            @map("birth_date")
  phones              Phones[]
  dateFirstTrip       String?            @map("date_first_trip")
  isInMarriage        Boolean            @default(false) @map("is_in_marriage")
  isHaveChildren      Boolean            @default(false) @map("is_have_children")
  isHaveDriverLicense Boolean            @default(false) @map("is_have_driver_license")
  drivingExperience   String?            @map("driving_experience")
  isHaveInterPassport Boolean            @default(false) @map("is_have_inter_passport")
  foreignLanguages    ForeignLanguages[]
  notes               String?
  Files               Files[]
  user                User               @relation(fields: [userId], references: [id])
  userId              String             @unique @map("user_id")
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")

  @@map("employees")
}

model Citizenships {
  id        String      @id @default(uuid())
  code      String      @unique
  localeRu  String      @unique @map("locale_ru")
  localeEn  String      @unique @map("locale_en")
  employees Employees[] @relation("citizenship_of_employees")
  createdAt DateTime    @default(now()) @map("created_at")
  updatedAt DateTime    @updatedAt @map("updated_at")

  @@map("citizenships")
}

model ForeignLanguages {
  id          String        @id @default(uuid())
  employees   Employees     @relation(fields: [employeesId], references: [id])
  employeesId String        @map("employees_id")
  language    Languages     @relation(fields: [languageId], references: [id])
  languageId  String        @map("language_id")
  level       LanguageLevel
  createdAt   DateTime      @default(now()) @map("created_at")
  updatedAt   DateTime      @updatedAt @map("updated_at")

  @@map("foreign_languages")
}

model Languages {
  id               String             @id @default(uuid())
  code             String             @unique
  localeRu         String             @unique @map("locale_ru")
  localeEn         String             @unique @map("locale_en")
  foreignLanguages ForeignLanguages[]
  createdAt        DateTime           @default(now()) @map("created_at")
  updatedAt        DateTime           @updatedAt @map("updated_at")

  @@map("languages")
}

model Files {
  id          String    @id @default(uuid())
  fileName    String    @unique @map("file_name")
  type        FilesType
  employees   Employees @relation(fields: [employeesId], references: [id])
  employeesId String    @map("employees_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("files")
}

model Phones {
  id          String         @id @default(uuid())
  number      String
  option      PhoneSelection
  employees   Employees      @relation(fields: [employeesId], references: [id])
  employeesId String         @map("employees_id")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")

  @@map("phones")
}

enum PhoneSelection {
  mobile
  whatsapp
  telegram
  viber
}

enum LanguageLevel {
  A1
  A2
  B1
  B2
  C1
  C2
  SPOKEN
  NATIVE
}

enum FilesType {
  PASSPORT
}

